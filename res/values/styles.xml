<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@drawable/qa_top_bg2</item>
    </style>

    <style name="activityTitlebar" parent="android:Theme">
        <item name="android:windowTitleSize">60dp</item>
        <item name="android:windowBackground">@drawable/no2_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="headActivityTitlebar" parent="android:Theme">
        <item name="android:windowTitleSize">60dp</item>
        <item name="android:windowBackground">@drawable/no2_background</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="activityNoTitlebar" parent="android:Theme">
        <item name="android:windowBackground">@drawable/no2_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="activityNoTitlebarFullScreen" parent="android:Theme">
        <item name="android:windowBackground">@drawable/no2_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- popmenu出现及消失 -->
    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popmenu_enter</item>
        <item name="android:windowExitAnimation">@anim/popmenu_exit</item>
    </style>

    <!-- popmenu出现及消失 -->
    <style name="popMoreAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popmore_show</item>
        <item name="android:windowExitAnimation">@anim/popmore_exit</item>
    </style>

    <style name="mydialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.NoTitleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@color/background_light_black</item>
    </style>

    <style name="dialog_button" parent="android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/qa_you_pop_99</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listview" parent="@android:style/Widget.TextView">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:state_focused">false</item>
    </style>

    <style name="perference_set_activity">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@drawable/setting_bg</item>
        <!-- 窗口背景 -->
        <item name="android:focusable">false</item>
        <item name="android:textColor">#ff000000</item>
        <!-- 字体颜色 -->
        <item name="android:colorBackgroundCacheHint">#00000000</item>
        <!-- 背景缓存色透明，避免拖动全黑 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否有标题 -->
    </style>

    <style name="dialogw" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_yjtm_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

</resources>