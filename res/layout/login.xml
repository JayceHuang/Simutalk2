<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="165dp"
    android:background="@drawable/weibo_editcontent" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:gravity="center_vertical"
        android:background="@drawable/trans_pop_shire_bg_up"  >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:text="欢迎使用"
            android:textSize="22dp"
            android:textStyle="bold" />        
    </LinearLayout>
           
    <EditText
        android:id="@+id/edit_user_name"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:background="@drawable/qa_ci_search_bg3"
        android:ems="10"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:maxLength="28"
        android:hint="输入昵称"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="20dp"
        android:textStyle="bold" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_set_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_user_name"
        android:layout_centerHorizontal="true"
        android:background="@drawable/com_button"
        android:text="@string/btn_set_name"
        android:textColor="#FFFFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>