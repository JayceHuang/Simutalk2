<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:minHeight="60dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvCategroy"
                android:textColor="#80000000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categroy" />

            <TextView
                android:id="@+id/textView2"
                android:textSize="15sp"
                android:textColor="#80000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">>" />

            <TextView
                android:id="@+id/tvChild"
                android:textColor="#80000000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child" />
        </LinearLayout>

        
        <LinearLayout
            android:id="@+id/llTop"
            android:layout_below="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMiddle1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/llTop"
            android:background="@drawable/trans_font_bg_ce_2more_up_normal"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >
            
            <TextView
            android:id="@+id/tvEnglish"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="TextView" />
            
            <ImageButton
            android:id="@+id/btnSpeak1"
            android:visibility="gone"
            android:background="@drawable/no2_speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            
            <ImageButton
            android:id="@+id/btnMore1"
            android:layout_gravity="top"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:paddingLeft="0dip"
        	android:paddingRight="10dip"
        	android:paddingTop="5dip"
        	android:paddingBottom="5dip"
        	android:src="@drawable/no2_action"
        	android:background="@null"
        	android:contentDescription="@null"
            android:layout_marginRight="5dip" />
            
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llMiddle2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llMiddle1"
			android:layout_centerHorizontal="true"
            android:orientation="vertical" >
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llMiddle3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llMiddle2"
            android:background="@drawable/trans_font_bg_ce_2more_down_normal"
            android:gravity="center_vertical"
			android:layout_centerHorizontal="true" 
			android:orientation="horizontal">
            
            <TextView
            android:id="@+id/tvChinese"
            android:textSize="20sp"
            android:textColor="#ff707070"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="TextView" />
            
            <ImageButton
            android:id="@+id/btnSpeak2"
            android:visibility="gone"
            android:background="@drawable/no2_speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            
            <ImageButton
            android:id="@+id/btnMore2"
            android:background="#00000000"
            android:paddingLeft="16dip"
            android:paddingRight="24dip"
            android:layout_marginRight="5dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        </LinearLayout>
         <LinearLayout
            android:id="@+id/llBottom"
            android:layout_below="@+id/llMiddle3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
            android:orientation="vertical" >
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>