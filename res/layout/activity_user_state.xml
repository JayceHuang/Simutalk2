<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/hd_qa" />

    <FrameLayout
        android:id="@+id/flSolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp" >
	    <Button
	        android:id="@+id/btnSolve"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/flSolve"
	        android:layout_below="@+id/llUserInfo"
	        android:background="@drawable/qa_you_qa_min_button_letter" />
    
	    <TextView
	            android:id="@+id/tvTaskCount"
	            android:layout_gravity="center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="2dp"
	            android:background="@drawable/qa_you_pop_99"
	            android:textColor="@color/qa_pop_message_text_count"
	            android:gravity="top"
		        android:paddingLeft="7dp"
		        android:paddingTop="0dp"
	            android:textSize="17dp"
	            android:text="5"
	            android:textStyle="bold" />
    </FrameLayout>
            
    <LinearLayout
        android:id="@+id/llUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/qa_user_name"
                android:textColor="#FFFFFFFF" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小飞侠"
                android:textColor="#FFFFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/qa_ask_count"
                android:textColor="#FFFFFFFF" />

            <TextView
                android:id="@+id/tvAskCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20个"
                android:textColor="#FFFFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/qa_solve_count"
                android:textColor="#FFFFFFFF" />

            <TextView
                android:id="@+id/tvSolveCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50个"
                android:textColor="#FFFFFFFF" />
        </LinearLayout>
    </LinearLayout>



    <RadioButton
        android:id="@+id/rbNetState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:id="@+id/fishQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"      
        android:layout_marginTop="20dip"
        android:layout_alignTop="@+id/flSolve" >

        <ImageButton
            android:id="@+id/btnFish"      
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="@drawable/qa_you_qa_min_button_steal"/>

        <TextView
	            android:id="@+id/tvFishCount"
	            android:layout_gravity="center|top"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/qa_you_pop_99"
	            android:textColor="@color/qa_pop_message_text_count"
	            android:gravity="top"
		        android:paddingLeft="7dp"
		        android:paddingTop="0dp"
	            android:textSize="17dp"
	            android:text="5"
	            android:textStyle="bold" />
    </FrameLayout>

    <Button
        android:id="@+id/btnAsk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="307dp"
        android:background="@drawable/no2_bird_left1" />

    <Button
        android:id="@+id/btnSolve2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/flSolve"
        android:layout_alignLeft="@+id/flSolve"
        android:layout_marginLeft="50dp"
         android:layout_marginTop="18dp"
        android:background="@drawable/qa_you_qa_min_button01" />

    <Button
        android:id="@+id/btnAsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnAsk1"
        android:layout_alignLeft="@+id/btnAsk1"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="-22dp"
        android:background="@drawable/qa_you_qa_min_button02" />

    <ImageView
        android:id="@+id/ivBirdRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="80dp" />

    <ImageView
        android:id="@+id/ivBirdLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="180dp" />
        
</RelativeLayout>