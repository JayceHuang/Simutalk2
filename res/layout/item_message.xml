<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"    
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:descendantFocusability="blocksDescendants"

    android:orientation="horizontal" >

   <LinearLayout
        android:id="@+id/llUser1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:orientation="vertical" >
	   <ImageView
	        android:id="@+id/imageUser1"
	        android:layout_width="39dp"
	        android:layout_height="41dp"
	        android:src="@drawable/qa_you_qa_min_friend_head">
	   </ImageView> 
	   
        <TextView
           android:id="@+id/tvName1"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:textColor= "#FF808080"
           android:text="asdasd"
           android:textSize="13dp" 
           android:layout_marginLeft="0dp"/>		   
   </LinearLayout>  
   
   <LinearLayout
		android:id="@+id/llBack"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
        android:layout_weight="1"
        android:background="@drawable/qa_you_qa_min_dont_bg"
     	android:orientation="vertical">  	    		    
        <TextView
           android:id="@+id/tvItemText"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="3dp"
           android:layout_marginRight="3dp"
           android:text="Small Text"
           android:textColor= "#FF000000"
           android:textSize="15sp" 
           android:layout_weight="0.2"/>
        
        <TextView
           android:id="@+id/tvItemText2"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="8dp"
           android:layout_marginRight="3dp"
           android:text="无内容"
           android:textColor= "#666666"
           android:textSize="13sp" 
           android:layout_weight="0.2"/>
           
	    <LinearLayout
	        android:id="@+id/layoutMsgSound"
		    android:layout_width="fill_parent"
		    android:layout_marginLeft="3dp"
		    android:layout_marginRight="3dp"
		    android:layout_height="wrap_content" >
		
	        <TextView
	            android:id="@+id/tvLen"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor= "#FF808080"
	            android:layout_marginRight="0dp"
	            android:text="3秒"
	            android:textSize="15dp" />
		    <Button
	            android:id="@+id/btnPlay"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="0dp"
	            android:background="@drawable/qa_icon_langdu"  />
	        <TextView
	            android:id="@+id/tvAskTime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="right"
	            android:text="时间"
	            android:textColor="#FF808080"
	            android:textSize="13dp" />			        			            		               
	     </LinearLayout>
 	</LinearLayout>	  	
        
   <LinearLayout
        android:id="@+id/llUser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	   <ImageView
	        android:id="@+id/imageUser2"
	        android:layout_width="39dp"
	        android:layout_height="41dp"
	        android:src="@drawable/qa_you_qa_min_friend_head">
	   </ImageView> 
	   
        <TextView
           android:id="@+id/tvName2"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:textColor= "#FF808080"
           android:text="asdasd"
           android:textSize="13dp" 
           android:layout_marginLeft="0dp"/>		   
   </LinearLayout>       
   
</LinearLayout>